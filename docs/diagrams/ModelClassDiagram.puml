@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyRestaurantDirectory" as ReadOnlyRestaurantDirectory
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class RestaurantDirectory
Class ModelManager
Class UserPrefs

Class UniqueRestaurantList
Class Restaurant
Class Address
Class Name
Class Phone
Class Tag
Class Rating

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

RestaurantDirectory .up.|> ReadOnlyRestaurantDirectory

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyRestaurantDirectory
ModelManager -left-> "1" RestaurantDirectory
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

RestaurantDirectory *--> "1" UniqueRestaurantList
UniqueRestaurantList --> "~* all" Restaurant
Restaurant *--> "1" Name
Restaurant *--> "1" Phone
Restaurant *--> "1" Address
Restaurant *--> "*" Tag
Restaurant *--> "0..1" Rating

Restaurant -[hidden]up--> I
UniqueRestaurantList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address

ModelManager --> "~* filtered" Restaurant
@enduml
